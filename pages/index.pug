body(style="background-image: url('back.webp'); background-repeat: no-repeat; background-attachment: fixed;")
    .row.row-cols-1.row-cols-md-3.g-4(style='margin:10px; margin-top:0px; margin-bottom:20px;')
        each val in exercises
            -var link = `/exercise?db=${val.name}`
            -var image = `/images/${val.name}.jpg`
            .col
                .card.h-100(style="background-color:#bebebe;")
                    img.card-img-top(src=image style='width:100%; height:15vw; object-fit:cover;')
                    .card-body
                        a.stretched-link(href=link)
                        h5.card-title #{val.name}
                        pre.card-text #{val.description}